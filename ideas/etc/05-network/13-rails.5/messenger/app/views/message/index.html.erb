<%= render 'header' %>
<h3>Listing Message (<%= @messages.count%>)</h3>

<table>
<% @messages.each do |i| %>
  <tr>
    <td>(<%= i.created_at %>)</td>
    <td><b><%= i.title %><b></td>
    <td>
      <%= link_to "Show", message_path(i) %> |
      <%= link_to "Edit", edit_message_path(i) %> |
      <%= link_to 'Destroy', i,  method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br>
<%= link_to "New", new_message_path %>
